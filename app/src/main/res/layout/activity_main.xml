<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeanieorejarena.tictactoejo.MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/imageView3"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:scaleX="5"
        android:scaleY="3"
        android:src="@drawable/tictactoejobgtwo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="150sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/tictactoejoapp" />

    <Button
        android:id="@+id/SP_Activityy"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:text="SinglePlayer"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="MultiPlayer"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="25dp"
        android:text="Exit"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/SoundVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:layout_toEndOf="@+id/button7"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

</RelativeLayout>
